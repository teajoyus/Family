<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/bg"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/regist_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            />
        <TextView
            android:id="@+id/login_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Family"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/regist_count_et"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/radius_shape"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/regist_ll"
        android:layout_marginTop="30dp"
        android:hint="请输入账号"
        android:textColorHint="#60ffffff"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/regist_pwd_et"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/radius_shape"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/regist_count_et"
        android:layout_marginTop="20dp"
        android:hint="请输入密码"
        android:textColorHint="#60ffffff"
        android:inputType="textPassword"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/regist_pwd_et2"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/radius_shape"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/regist_pwd_et"
        android:layout_marginTop="20dp"
        android:hint="请确认密码"
        android:textColorHint="#60ffffff"
        android:inputType="textPassword"
        android:gravity="center"
        />
    <Button
        android:id="@+id/regist_comfirm_bt"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/login_comfirm_btn_selector"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/regist_pwd_et2"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:text="注册"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:text="Copyright [c] 2016-2016 By HuiZhou University Allrights Reserved. "
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:textColor="#ffffff"
        />
</RelativeLayout>
